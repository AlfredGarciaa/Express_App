<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.bo.ucb.express_app">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Express_App"
        tools:targetApi="31">

        <activity
            android:name=".Login.LoginAdapter"
            android:label="@string/title_login"
            android:exported="true"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.RegisterActivity"
            android:label="@string/title_register"
            android:exported="false"
            android:launchMode="singleInstance" />
        <activity
            android:name=".Menu.Menu"
            android:label="@string/title_menu"
            android:exported="false" />
        <activity
            android:name=".Contactos.ContactosAdapter"
            android:label="@string/title_contactos"
            android:exported="false" />
        <activity
            android:name=".Contactos.ListaDeContactos"
            android:label="@string/title_contactos_lista"
            android:exported="false" />
        <activity
            android:name=".Horario.HorarioAdapter"
            android:label="@string/title_horario"
            android:exported="false" />
        <activity
            android:name=".Galeria.GaleriaAdapter"
            android:label="@string/title_galeria"
            android:exported="false" />
        <activity
            android:name=".Galeria.ImagenCompleta"
            android:label="@string/title_galeria_completa"
            android:exported="false" />
    </application>

</manifest>